<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pro.lopushok.ui.ChangePriceController"
      spacing="12" prefWidth="420" stylesheets="@style.css">
    <padding><Insets topRightBottomLeft="12"/></padding>

    <HBox styleClass="header-bar" spacing="10">
        <ImageView fx:id="logo" fitHeight="36" preserveRatio="true"/>
        <Label fx:id="title" style="-fx-font-size:18px;-fx-font-weight:bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>

        <Label text="Увеличить на" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="valueField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Среднее по выборке" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="avgLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="applyBtn" text="Применить" styleClass="accent-btn"/>
        <Button fx:id="cancelBtn" text="Отмена"/>
    </HBox>
</VBox>
